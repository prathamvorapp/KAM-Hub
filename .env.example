# Convex Configuration
CONVEX_DEPLOYMENT=your-convex-deployment-name
CONVEX_URL=https://your-deployment.convex.cloud
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
NEXT_PUBLIC_CONVEX_SITE_URL=https://your-deployment.convex.site

# JWT Configuration (Generate strong secrets for production)
# Use: openssl rand -base64 32
JWT_SECRET=generate-a-strong-secret-here
SUPABASE_JWT_SECRET=generate-a-strong-secret-here

# Legacy Supabase Configuration (Optional - can be removed after full migration)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Google Sheets Configuration (Optional)
GOOGLE_SHEETS_CREDENTIALS_FILE=./Google_Sheet.json
ROLE_MAPPING_SHEET_ID=your-sheet-id
DATA_SHEET_ID=your-sheet-id

# Cache Configuration
CACHE_DURATION_SECONDS=300
USER_PROFILE_CACHE_SECONDS=300
SHEETS_CACHE_SECONDS=60

# Application Configuration
NODE_ENV=production
